# Add homebrew to the $PATH variable
eval "$(/opt/homebrew/bin/brew shellenv)"

# Set prompt to show three directories and add a arrow in the end robbyrussel theme
PROMPT="%(?:%{$fg_bold[green]%}➜ :%{$fg_bold[red]%}➜ ) %{$fg[cyan]%}%3d%{$reset_color%} \$(git_prompt_info)➜ "

# Setting default JDK to java 8
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_321.jdk/Contents/Home

# Kubectl alias
alias k="kubectl"

# Minikube alias
alias mk="minikube"

#Local sonar
alias sonarqube="~/development/apps/sonarqube-7.7/bin/macosx-universal-64/sonar.sh"

# Gradle tasks
_GRADLEW_CMD='./gradlew -Dorg.gradle.jvmargs=-Xmx2g '
_NO_DAEMON='--no-daemon --no-parallel --max-workers=1 '

# SONAR
alias run-sonar="${_GRADLEW_CMD} sonarqube -Dsonar.host.url=${_SONAR_QUBE_HOST} -Dsonar.login=${_SONAR_QUBE_TOKEN}"

# TESTS
alias run-tests="${_GRADLEW_CMD} test"

# SPRING SERVICE DEV
alias run-microservice="SPRING_PROFILES_ACTIVE=dev ${_GRADLEW_CMD} clean bootRun"

export PATH="${HOME}/.npm-global/bin:${PATH}"